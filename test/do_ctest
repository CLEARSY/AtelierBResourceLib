#!/bin/sh
# Lance un test du banc de tests NGOP
#
HOMETEST=$1
TOOLSDIR=$2
ID=$3

cd $HOMETEST

TESTDIR=$HOMETEST/$ID
REFERENCEDIR=$TESTDIR/output/reference
RESULTDIR=$TESTDIR/output/result
if [ -d $RESULTDIR ]; then
    rm -fr $RESULTDIR
fi
mkdir -p $RESULTDIR

$TOOLSDIR/printResourceFile $HOMETEST/$ID/AtelierB > $RESULTDIR/stdout 2> $RESULTDIR/stderr
echo $? > $RESULTDIR/exitcode

diff $REFERENCEDIR/stdout $RESULTDIR/stdout
if [ $? -ne 0 ]
then
    echo "!! stdout is not identical to reference for $ID"
else

diff $REFERENCEDIR/stderr $RESULTDIR/stderr
if [ $? -ne 0 ]
then
    echo "!! stderr is not identical to reference for $ID"
else

diff $REFERENCEDIR/exitcode $RESULTDIR/exitcode
if [ $? -ne 0 ]
then
    echo "!! exitcode is not identical to reference for $ID"
else
    echo "OK"
fi
fi
fi
